@model MotorcycleDetailsModel
@{
    ViewData["Title"] = "Motorcycle Details";
}

<div class="text-center">
    <h1 class="display-4">@Model.Model @Model.EngineDisplacement</h1>
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="@Model.PictureUrl">
        <div class="card-body">
            <a class="card-link" asp-area="" asp-controller="Motorcycles" asp-action="Update" asp-route-id="@Model.Id">Update</a>
            <form class="form-inline" asp-area="" asp-controller="Motorcycles" asp-action="Delete" asp-route-id="@Model.Id" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Delete</button>
            </form>
        </div>
    </div>
</div>
