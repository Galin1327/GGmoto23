@model MotorcycleUpdateModel
@{
    ViewData["Title"] = "Motorcycle Update";
}

<div class="text-center">
    <form asp-area="" asp-controller="Motorcycles" asp-action="Update" method="post">
        <input asp-for="Id" type="hidden" />
        <div class="form-group">
            <label for="model">Model</label>
            <input asp-for="Model" class="form-control" id="model" />
        </div>
        <div class="form-group">
            <label for="engineDisplacement">EngineDisplacement</label>
            <input asp-for="EngineDisplacement" class="form-control" id="engineDisplacement" />
        </div>
        <div class="form-group">
            <label for="price">Price</label>
            <input asp-for="Price" class="form-control" id="price" />
        </div>
        <div class="form-group">
            <label for="pictureUrl">PictureUrl</label>
            <input asp-for="PictureUrl" class="form-control" id="pictureUrl" />
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>
